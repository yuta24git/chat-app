
<div class = "chat-header">
  <div class = "room-name">
    hogefuga
  </div>
  <div class = "exit">
    <a href="#">チャットを終了する</a>
  </div>
</div>
<% @messages.each do |message| %>
  <div class = "messages">
    <div class="talk-wrapper">
      <div class = "name">
      <%= message.name %>
      </div>
      <div class = "date">
      <%= message.created_at %>
      </div>
    </div>
    <div class = "message">
      <%= message.message %>
    </div>  
  </div>
<% end %>
<div class = "form">
  <div class = "input">
    <input type = "text" class="form-message" placeholder = "type a message">
    <label class="form-image">
      <span class="image-file">画像</span>
      <input type="file" class="hidden">
    </label>
  </div>
  <input class="send" type="submit" value="送信">
</div>